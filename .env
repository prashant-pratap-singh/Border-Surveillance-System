# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# Database settings
DATABASE_URL=mongodb://localhost:27017/surveillance
REDIS_URL=redis://localhost:6379/0

# AI Model settings
DETECTION_MODEL=yolov8x.pt
SEGMENTATION_MODEL=sam_vit_h.pth
BEHAVIOR_MODEL=behavior_analysis_v1.onnx

# Detection settings
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Alert settings
ALERT_COOLDOWN=300
SMS_ENABLED=False
EMAIL_ENABLED=True
NOTIFICATION_RECIPIENTS=admin@example.com,security@example.com

# Performance settings
BATCH_SIZE=4
NUM_WORKERS=4
USE_CUDA=True

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Video processing settings
PROCESS_FRAMERATE=10
DEFAULT_VIDEO_OUTPUT_FPS=30
MAX_RESOLUTION=1920,1080

# Security settings
SECRET_KEY=replace-with-secure-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# System behavior settings
SUSPICIOUS_LOITERING_TIME=300
FENCE_TAMPERING_THRESHOLD=0.7
THERMAL_DETECTION_THRESHOLD=0.6

# Border Surveillance System Environment Variables

# Video source (0 for primary webcam, 1 for secondary, or a video file path)
VIDEO_SOURCE=0

# FPS limit (adjust based on hardware capabilities)
FPS=20

# Detection confidence threshold (0.0 to 1.0)
DETECTION_THRESHOLD=0.45

# Tampering detection sensitivity (0.0 to 1.0)
TAMPERING_SENSITIVITY=0.3

# Loitering detection time in seconds
LOITERING_TIME=30

# Loitering area threshold (ratio of frame)
LOITERING_AREA=0.2

# Crawling detection ratio threshold
CRAWLING_RATIO=0.5

# Twilio SMS settings
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_RECIPIENT_NUMBERS=+1234567890,+9876543210

# MQTT Alert distribution
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=border/alerts

# GPS and Map settings
GPS_ENABLED=true
DEFAULT_LAT=37.7749
DEFAULT_LON=-122.4194
MAP_UPDATE_INTERVAL=5
MAP_TILE_PROVIDER=OpenStreetMap
MAP_ZOOM_LEVEL=15
GPSD_HOST=localhost
GPSD_PORT=2947

# Performance settings
USE_GPU=true
MODEL_PRECISION=fp16
MAX_BATCH_SIZE=1 